{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "pytest: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Cloud Run: Local Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cloud-run/main.py",
            "envFile": "${workspaceFolder}/cloud-run/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Cloud Job: Update Stocks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cloud-job/update_stocks_price.py",
            "args": [
                "--codes",
                "7203",
                "--days",
                "7"
            ],
            "envFile": "${workspaceFolder}/cloud-job/.env",
            "console": "integratedTerminal"
        }
    ]
}